{
    "autoload": {
        "psr-4": {
            "Ocean\\Router\\": "ocean/router/src/"
        }
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "aura/router": "^3.2",
        "symfony/routing": "^6.0"
    },
    "require-dev": {
        "symfony/error-handler": "^6.0",
        "laminas/laminas-diactoros": "^2.11",
        "vimeo/psalm": "^4.23",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "serve": "@php -S localhost:8000 -t public/",
        "psalm": "./vendor/bin/psalm",
